<%- include ('../partials/header.ejs') -%>
<h1>Editar pessoa</h1>
<p><a type="button" class="btn btn-primary" href="/pessoas">Voltar</a></p>
<form method='POST'>
    <div class="form-group">
      <label for="nome">Nome</label>
      <input type="text" name="nome" value="<%= pessoa.nome %>" class="form-control" id="nome" placeholder="Nome">
    </div>
 
    <div class="form-group">
        <label for="nascimento">Nascimento</label>
        <input type="text" name="nascimento" value="<%=  pessoa.nascimento  %>" class="form-control" id="nascimento" placeholder="01/01/0000">
      </div>

      <div class="form-group">
        <label for="cargo">Cargo</label>
        <input type="text" name="cargo" value="<%= pessoa.cargo %>" class="form-control" id="cargo" placeholder="Cargo">
      </div>
     
    <button type="submit" class="btn btn-success">Salvar</button>
  </form>
<%- include ('../partials/footer.ejs') -%>